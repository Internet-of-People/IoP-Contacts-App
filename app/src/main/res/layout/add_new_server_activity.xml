<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <TextView
            android:id="@+id/sendMessage"
            style="@style/MessageText"
            android:text="@string/add_server_message"
            android:textColor="@color/mainText"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/edit_alias"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_inputs"
            android:gravity="center"
            android:hint="Enter the server alias"
            android:padding="12dp"
            android:textColor="#4d4d4d"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_ip"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_inputs"
            android:gravity="center"
            android:hint="Enter the server IP"
            android:padding="12dp"
            android:textColor="#4d4d4d"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_port"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="16987" />

        <ImageView
            android:id="@+id/img_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_qr_code_blue" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                >

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_add_srv"
                style="@style/ButtomBlue"
                android:text="@string/add_new_server" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>